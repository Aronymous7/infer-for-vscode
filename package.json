{
  "name": "infer-for-vscode",
  "displayName": "Infer for VSCode",
  "description": "Static runtime analysis for Java code, powered by Facebook's Infer.",
  "version": "0.0.1",
  "publisher": "Aaron Beigelbeck",
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Debuggers"
  ],
  "keywords": [
    "Infer",
    "Facebook",
    "Runtime analysis",
    "Static analysis",
    "Java"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "infer-for-vscode.executeInfer",
        "title": "Re-execute Infer",
        "category": "Infer"
      },
      {
        "command": "infer-for-vscode.enableInfer",
        "title": "Enable Infer for current project",
        "category": "Infer"
      },
      {
        "command": "infer-for-vscode.enableInferForCurrentFile",
        "title": "Enable Infer only for current file",
        "category": "Infer"
      },
      {
        "command": "infer-for-vscode.disableInfer",
        "title": "Disable Infer",
        "category": "Infer"
      },
      {
        "command": "infer-for-vscode.cleanInferOut",
        "title": "Clean Infer output",
        "category": "Infer"
      },
      {
        "command": "infer-for-vscode.addMethodToWhitelist",
        "title": "Add method to whitelist",
        "category": "Infer"
      },
      {
        "command": "infer-for-vscode.removeMethodFromWhitelist",
        "title": "Remove method from whitelist",
        "category": "Infer"
      }
    ],
    "configuration": {
      "title": "Infer",
      "properties": {
        "infer-for-vscode.methodWhitelist": {
          "type": "array",
          "default": ["print", "println"],
          "description": "Whitelisted methods that won't lead to an automatic re-execution of Infer when a call to them is added or removed somewhere in your code.",
          "examples": [["cheapMethod1", "cheapMethod2"]],
          "uniqueItems": true
        },
        "infer-for-vscode.automaticReExecution": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic re-execution of Infer when significant code changes get saved. Since this includes at least partial re-compilation, use with caution for larger projects."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.14",
    "@types/vscode": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.9.7",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "diff": "^4.0.2",
    "sanitize-html": "^1.27.1"
  }
}
